generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  password          String
  name              String
  token             String?            @db.VarChar(100)
  presentations     Presentation[]
  learning_progress LearningProgress[]

  @@map("users")
}

model Learning {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  video_url   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  learningProgress LearningProgress[]
}

model LearningProgress {
  id          Int            @id @default(autoincrement())
  user_id     Int
  learning_id Int
  status      LearningStatus @default(LOCKED)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  user     User     @relation(fields: [user_id], references: [id])
  learning Learning @relation(fields: [learning_id], references: [id])
}

model Presentation {
  id        Int      @id @default(autoincrement())
  title     String
  video_url String
  status    String   @default("ONGOING") // "ONGOING", "COMPLETED", "FAILED"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  feedbacks Feedbacks[]
  questions Question[]

  @@map("presentations")
}

model Feedbacks {
  id             Int      @id @default(autoincrement())
  expression     Int
  intonation     Int
  posture        Int
  overall_rating Float
  suggestion     String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  presentation_id Int
  presentation    Presentation @relation(fields: [presentation_id], references: [id], onDelete: Cascade)

  @@map("feedbacks")
}

model Question {
  id       Int    @id @default(autoincrement())
  question String @db.Text

  presentation_id Int
  presentation    Presentation @relation(fields: [presentation_id], references: [id], onDelete: Cascade)

  answers Answer[]

  @@map("questions")
}

model Answer {
  id          Int      @id @default(autoincrement())
  audio_url   String
  score       Float?
  feedback    String?  @db.Text
  is_relevant Boolean  @default(false)
  createdAt   DateTime @default(now())

  question_id Int
  question    Question @relation(fields: [question_id], references: [id], onDelete: Cascade)

  @@map("answers")
}

enum PresentationStatus {
  ONGOING
  COMPLETED
  FAILED
}

enum UserRole {
  ADMIN
  USER
  GUEST
}

enum LearningStatus {
  LOCKED
  ONPROGRESS
  COMPLETED
}
